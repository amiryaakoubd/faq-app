{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "plugins": ["react"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "@next/next/no-img-element": "off",
    "react/self-closing-comp": "warn",
    "prefer-const": "error",
    "prettier/prettier": "error" // Enable prettier as an ESLint rule
  }
}
